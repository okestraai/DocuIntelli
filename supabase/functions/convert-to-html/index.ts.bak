import "jsr:@supabase/functions-js/edge-runtime.d.ts";
import { createClient } from "jsr:@supabase/supabase-js@2";

const corsHeaders = {
  "Access-Control-Allow-Origin": "*",
  "Access-Control-Allow-Methods": "GET, POST, PUT, DELETE, OPTIONS",
  "Access-Control-Allow-Headers": "Content-Type, Authorization, X-Client-Info, Apikey",
};

Deno.serve(async (req: Request) => {
  if (req.method === "OPTIONS") {
    return new Response(null, {
      status: 200,
      headers: corsHeaders,
    });
  }

  try {
    const { filePath, documentId } = await req.json();

    if (!filePath || !documentId) {
      return new Response(
        JSON.stringify({ error: "filePath and documentId are required" }),
        {
          status: 400,
          headers: { ...corsHeaders, "Content-Type": "application/json" },
        }
      );
    }

    console.log("Converting document to HTML:", filePath);

    const supabaseUrl = Deno.env.get("SUPABASE_URL")!;
    const supabaseServiceKey = Deno.env.get("SUPABASE_SERVICE_ROLE_KEY")!;

    const supabase = createClient(supabaseUrl, supabaseServiceKey);

    const { data: fileData, error: downloadError } = await supabase
      .storage
      .from('documents')
      .download(filePath);

    if (downloadError || !fileData) {
      console.error('Error downloading file:', downloadError);
      return new Response(
        JSON.stringify({ error: "Failed to download file from storage" }),
        {
          status: 500,
          headers: { ...corsHeaders, "Content-Type": "application/json" },
        }
      );
    }

    console.log('File downloaded, size:', fileData.size, 'type:', fileData.type);

    const { data: chunks, error: chunksError } = await supabase
      .from('document_chunks')
      .select('id, chunk_text, chunk_index')
      .eq('document_id', documentId)
      .order('chunk_index', { ascending: true });

    if (chunksError) {
      console.error('Error fetching chunks:', chunksError);
    }

    let htmlContent = '';

    if (chunks && chunks.length > 0) {
      console.log('Using chunks to build HTML, count:', chunks.length);
      htmlContent = chunks.map(chunk =>
        `<div class="chunk" data-chunk-id="${chunk.id}" data-chunk-index="${chunk.chunk_index}">
          <p>${escapeHtml(chunk.chunk_text)}</p>
        </div>`
      ).join('\n');
    } else {
      console.log('No chunks found');
      htmlContent = '<p>Document content could not be loaded.</p>';
    }

    const styledHtml = `
<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    body {
      font-family: 'Times New Roman', Times, serif;
      font-size: 12pt;
      line-height: 1.6;
      color: #000000;
      padding: 1in;
      background: #ffffff;
      max-width: 8.5in;
      margin: 0 auto;
    }
    .chunk {
      margin-bottom: 1em;
      transition: background-color 0.3s ease;
    }
    .chunk p {
      margin: 0 0 0.5em 0;
      text-align: justify;
      white-space: pre-wrap;
      word-wrap: break-word;
    }
    .chunk.highlight-match {
      background-color: #fef08a;
      padding: 0.25em;
      border-radius: 2px;
    }
    .chunk.highlight-current {
      background-color: #86efac;
      padding: 0.25em;
      border-radius: 2px;
      box-shadow: 0 0 0 2px #22c55e;
    }
    mark {
      background-color: #fef08a;
      padding: 0.1em 0.2em;
      border-radius: 2px;
    }
    h1, h2, h3, h4, h5, h6 {
      margin-top: 1em;
      margin-bottom: 0.5em;
      font-weight: bold;
      color: #000000;
    }
    h1 { font-size: 18pt; }
    h2 { font-size: 16pt; }
    h3 { font-size: 14pt; }
    ul, ol {
      margin: 0.5em 0;
      padding-left: 1.5em;
    }
    li {
      margin: 0.25em 0;
    }
    table {
      border-collapse: collapse;
      width: 100%;
      margin: 1em 0;
    }
    td, th {
      border: 1px solid #000000;
      padding: 0.5em;
      text-align: left;
    }
    th {
      background-color: #f5f5f5;
      font-weight: bold;
    }
    pre {
      background: #f5f5f5;
      padding: 1em;
      border-radius: 2px;
      overflow-x: auto;
      white-space: pre-wrap;
      word-wrap: break-word;
      font-family: 'Courier New', monospace;
      font-size: 10pt;
    }
    img {
      max-width: 100%;
      height: auto;
    }
  </style>
  <script>
    let searchTexts = [];

    window.addEventListener('message', function(event) {
      if (event.data.type === 'highlight') {
        document.querySelectorAll('.chunk').forEach(el => {
          el.classList.remove('highlight-current', 'highlight-match');
          const marks = el.querySelectorAll('mark');
          marks.forEach(mark => {
            const parent = mark.parentNode;
            while (mark.firstChild) {
              parent.insertBefore(mark.firstChild, mark);
            }
            parent.removeChild(mark);
          });
          el.normalize();
        });

        if (event.data.searchText) {
          searchTexts = [event.data.searchText];
        }

        if (event.data.matchIds && event.data.matchIds.length > 0) {
          event.data.matchIds.forEach(id => {
            const element = document.querySelector('.chunk[data-chunk-id="' + id + '"]');
            if (element) {
              element.classList.add('highlight-match');

              if (searchTexts.length > 0) {
                highlightTextInElement(element, searchTexts);
              }
            }
          });
        }

        if (event.data.currentId) {
          const element = document.querySelector('.chunk[data-chunk-id="' + event.data.currentId + '"]');
          if (element) {
            element.classList.remove('highlight-match');
            element.classList.add('highlight-current');
            element.scrollIntoView({ behavior: 'smooth', block: 'center' });
          }
        }
      }
    });

    function highlightTextInElement(element, searchTexts) {
      const walker = document.createTreeWalker(
        element,
        NodeFilter.SHOW_TEXT,
        null
      );

      const textNodes = [];
      let node;
      while (node = walker.nextNode()) {
        textNodes.push(node);
      }

      textNodes.forEach(textNode => {
        searchTexts.forEach(searchText => {
          if (!searchText || searchText.trim().length === 0) return;

          const text = textNode.textContent;
          const searchLower = searchText.toLowerCase();
          const textLower = text.toLowerCase();

          if (textLower.includes(searchLower)) {
            const span = document.createElement('span');
            span.innerHTML = text.replace(
              new RegExp('(' + escapeRegex(searchText) + ')', 'gi'),
              '<mark>$1</mark>'
            );
            textNode.parentNode.replaceChild(span, textNode);
          }
        });
      });
    }

    function escapeRegex(string) {
      return string.replace(/[.*+?^${}()|[\\]]/g, '\\$&');
    }
  </script>
</head>
<body>
${htmlContent}
</body>
</html>
`;

    return new Response(styledHtml, {
      status: 200,
      headers: {
        ...corsHeaders,
        "Content-Type": "text/html",
      },
    });

  } catch (error) {
    console.error("Error in convert-to-html:", error);
    return new Response(
      JSON.stringify({
        error: error instanceof Error ? error.message : "Unknown error occurred"
      }),
      {
        status: 500,
        headers: { ...corsHeaders, "Content-Type": "application/json" },
      }
    );
  }
});

function escapeHtml(text: string): string {
  const map: Record<string, string> = {
    '&': '&amp;',
    '<': '&lt;',
    '>': '&gt;',
    '"': '&quot;',
    "'": '&#039;'
  };
  return text.replace(/[&<>"']/g, m => map[m]);
}
